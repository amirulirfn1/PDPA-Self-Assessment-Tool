service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their user document
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admins to read and write any user document
    match /users/{userId} {
      allow read, write, delete: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Allow authenticated admins to read and write their own admin document
    match /admins/{adminId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == adminId;
    }
    
    // Allow admins to read and write any admin document
    match /admins/{adminId} {
      allow read, write, delete: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow authenticated users to read and write assessments
    match /assessments/{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid != null;
    }
    
    // Allow authenticated users to read and write feedbacks
    match /feedback/{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid != null;
    }

    // Allow reading from the questions collection
    match /questions/{document=**} {
      allow read, write, delete: if request.auth != null;
    }

    // Allow admins to read feedback
    match /feedback/{document=**} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
